<UserControl x:Class="AutomationProfileManager.Views.AutomationProfileManagerSettingsView"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:models="clr-namespace:AutomationProfileManager.Models"
         xmlns:sys="clr-namespace:System;assembly=mscorlib"
         xmlns:local="clr-namespace:AutomationProfileManager.Views"
         mc:Ignorable="d" 
         d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        <local:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
        <local:TagsToStringConverter x:Key="TagsToStringConverter"/>
        
        <!-- Template per categorie nel TreeView -->
    <HierarchicalDataTemplate x:Key="CategoryTemplate" ItemsSource="{Binding Actions}">
        <TextBlock Text="{Binding CategoryName}" FontWeight="SemiBold" Foreground="#FF00BFFF"/>
        <HierarchicalDataTemplate.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal" Margin="2">
                    <TextBlock Text="{Binding Name}" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding TagsDisplay}" Foreground="#FF808080" FontSize="10" 
                               VerticalAlignment="Center" FontStyle="Italic"/>
                </StackPanel>
            </DataTemplate>
        </HierarchicalDataTemplate.ItemTemplate>
    </HierarchicalDataTemplate>
</UserControl.Resources>
<Grid>
<TabControl>
    <!-- Action Library Tab -->
    <TabItem Header="{DynamicResource LOC_APM_Tab_ActionLibrary}">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                    
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                    <Button Content="{DynamicResource LOC_APM_AddAction}" Click="AddAction_Click" Margin="0,0,5,0" Padding="10,5"/>
                    <Button Content="{DynamicResource LOC_APM_Edit}" Click="EditAction_Click" Margin="0,0,5,0" Padding="10,5" x:Name="EditActionButton" IsEnabled="False"/>
                    <Button Content="{DynamicResource LOC_APM_Remove}" Click="RemoveAction_Click" Margin="0,0,5,0" Padding="10,5" x:Name="RemoveActionButton" IsEnabled="False"/>
                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>
                    <Button Content="{DynamicResource LOC_APM_ImportDefaultActions}" Click="ImportDefaultActions_Click" Margin="0,0,5,0" Padding="10,5"/>
                </StackPanel>

                <TextBlock Grid.Row="1" Text="{DynamicResource LOC_APM_ActionLibraryDescription}" 
                           TextWrapping="Wrap" Foreground="#FF808080" Margin="0,0,0,10" FontSize="11"/>
                    
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                        
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
                        <Label Content="{DynamicResource LOC_APM_FilterByCategory}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox x:Name="CategoryFilterComboBox" Width="150" SelectionChanged="CategoryFilter_SelectionChanged" Margin="0,0,10,0">
                            <ComboBoxItem Content="{DynamicResource LOC_APM_AllCategories}" IsSelected="True"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <DataGrid x:Name="ActionsDataGrid" Grid.Row="1" 
                                  AutoGenerateColumns="False" 
                                  SelectionMode="Extended"
                                  CanUserAddRows="False"
                                  SelectionChanged="ActionsDataGrid_SelectionChanged"
                                  KeyDown="ActionsDataGrid_KeyDown">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="{DynamicResource LOC_APM_ColumnName}" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="{DynamicResource LOC_APM_ColumnCategory}" Binding="{Binding Category}" Width="100"/>
                                <DataGridTemplateColumn Header="{DynamicResource LOC_APM_ColumnTags}" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Tags, Converter={StaticResource TagsToStringConverter}}" 
                                                       Foreground="#FF808080" FontSize="10" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="{DynamicResource LOC_APM_ColumnType}" Binding="{Binding ActionType}" Width="100"/>
                                <DataGridTextColumn Header="{DynamicResource LOC_APM_ColumnPath}" Binding="{Binding Path}" Width="*"/>
                                <DataGridCheckBoxColumn Header="{DynamicResource LOC_APM_ColumnMirror}" Binding="{Binding IsMirrorAction}" Width="50"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>
            
            <!-- Profile Management Tab -->
            <TabItem Header="{DynamicResource LOC_APM_Tab_ProfileManagement}">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Panel: Profiles List -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                            <Button Content="{DynamicResource LOC_APM_NewProfile}" Click="AddProfile_Click" Margin="0,0,5,0" Padding="10,5"/>
                            <Button Content="{DynamicResource LOC_APM_Duplicate}" Click="DuplicateProfile_Click" Margin="0,0,5,0" Padding="10,5" x:Name="DuplicateProfileButton" IsEnabled="False"/>
                            <Button Content="{DynamicResource LOC_APM_FromTemplate}" Click="CreateFromTemplate_Click" Margin="0,0,5,0" Padding="10,5"/>
                            <Button Content="{DynamicResource LOC_APM_Delete}" Click="RemoveProfile_Click" Margin="0,0,5,0" Padding="10,5" x:Name="RemoveProfileButton" IsEnabled="False"/>
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5,0"/>
                            <Button Content="{DynamicResource LOC_APM_Export}" Click="ExportProfiles_Click" Margin="0,0,5,0" Padding="10,5"/>
                            <Button Content="{DynamicResource LOC_APM_Import}" Click="ImportProfiles_Click" Margin="0,0,5,0" Padding="10,5"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Text="{DynamicResource LOC_APM_AvailableProfiles}" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        
                        <ListBox x:Name="ProfilesListBox" Grid.Row="2" 
                                 SelectionChanged="ProfilesListBox_SelectionChanged"
                                 DisplayMemberPath="Name"/>
                    </Grid>
                    
                    <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="#FF3F3F46"/>
                    
                    <!-- Right Panel: Profile Actions -->
                    <Grid Grid.Column="2" Margin="10,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock x:Name="ProfileNameTextBlock" 
                                       FontSize="16" FontWeight="Bold" 
                                       VerticalAlignment="Center" Text="{DynamicResource LOC_APM_SelectProfile}"/>
                            <Button Content="{DynamicResource LOC_APM_DryRun}" Click="DryRunProfile_Click" 
                                    Margin="20,0,0,0" Padding="10,5" 
                                    x:Name="DryRunButton" IsEnabled="False"/>
                            <Button Content="{DynamicResource LOC_APM_FindReplacePath}" Click="FindReplacePath_Click" 
                                    Margin="10,0,0,0" Padding="10,5" 
                                    x:Name="FindReplaceButton" IsEnabled="False"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Text="{DynamicResource LOC_APM_ProfileActionsDescription}" 
                                   TextWrapping="Wrap" Foreground="#FF808080" Margin="0,0,0,10" FontSize="11"/>
                        
                        <Grid Grid.Row="2" Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{DynamicResource LOC_APM_AvailableActions}" FontWeight="SemiBold" Grid.Column="0"/>
                            <TextBlock Text="-->" HorizontalAlignment="Center" Grid.Column="1" Foreground="#FF808080"/>
                            <TextBlock Text="{DynamicResource LOC_APM_ProfileActions}" FontWeight="SemiBold" Grid.Column="2"/>
                        </Grid>
                        
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Available Actions - TreeView con categorie espandibili -->
                            <TreeView x:Name="AvailableActionsTreeView" 
                                      Grid.Column="0"
                                      ItemsSource="{Binding}"
                                      ItemTemplate="{StaticResource CategoryTemplate}"
                                      PreviewMouseLeftButtonDown="AvailableActionsTreeView_PreviewMouseLeftButtonDown"
                                      PreviewMouseMove="AvailableActionsTreeView_PreviewMouseMove"
                                      PreviewMouseLeftButtonUp="AvailableActionsTreeView_PreviewMouseLeftButtonUp"
                                      MouseDoubleClick="AvailableActionsTreeView_MouseDoubleClick">
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="TreeViewItem">
                                        <Setter Property="IsExpanded" Value="False"/>
                                        <Setter Property="Foreground" Value="#FFFFFFFF"/>
                                        <Setter Property="Padding" Value="2"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF3E3E42"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#FF0078D4"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TreeView.ItemContainerStyle>
                            </TreeView>

                            <TextBlock Grid.Column="1" Text=">>>" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                       FontSize="14" Foreground="#FF808080"/>
                            
                            <!-- Profile Actions - NO drag events, use buttons instead -->
                            <ListBox x:Name="ProfileActionsListBox" 
                                     Grid.Column="2"
                                     AllowDrop="True"
                                     Drop="ProfileActionsListBox_Drop"
                                     DragOver="ProfileActionsListBox_DragOver">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Move Up/Down buttons -->
                                            <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,0,5,0">
                                                <Button Content="^" Width="20" Height="16" Padding="0" Margin="0,0,0,1"
                                                        FontSize="10" Click="MoveActionUp_Click" ToolTip="{DynamicResource LOC_APM_MoveUp}"/>
                                                <Button Content="v" Width="20" Height="16" Padding="0"
                                                        FontSize="10" Click="MoveActionDown_Click" ToolTip="{DynamicResource LOC_APM_MoveDown}"/>
                                            </StackPanel>
                                            
                                            <TextBlock Text="{Binding Name}" Grid.Column="1" VerticalAlignment="Center" 
                                                       TextTrimming="CharacterEllipsis" Margin="0,0,5,0"/>
                                            
                                            <ComboBox Grid.Column="2" 
                                                      SelectedItem="{Binding ExecutionPhase}"
                                                      Width="120" Margin="0,0,5,0"
                                                      SelectionChanged="ExecutionPhase_Changed"
                                                      FontSize="11">
                                                <ComboBox.ItemsSource>
                                                    <x:Array Type="{x:Type models:ExecutionPhase}">
                                                        <x:Static Member="models:ExecutionPhase.BeforeStarting"/>
                                                        <x:Static Member="models:ExecutionPhase.AfterStarting"/>
                                                        <x:Static Member="models:ExecutionPhase.AfterClosing"/>
                                                    </x:Array>
                                                </ComboBox.ItemsSource>
                                            </ComboBox>
                                            
                                            <Button Content="X" Grid.Column="3" 
                                                    Width="24" Height="24"
                                                    Padding="0"
                                                    FontSize="12"
                                                    Click="RemoveActionFromProfile_Click"
                                                    ToolTip="{DynamicResource LOC_APM_RemoveFromProfile}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>
            
            <!-- Log Viewer Tab -->
            <TabItem Header="{DynamicResource LOC_APM_Tab_ActionLog}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                        <Button Content="{DynamicResource LOC_APM_Refresh}" Click="RefreshLog_Click" Margin="0,0,5,0" Padding="10,5"/>
                        <Button Content="{DynamicResource LOC_APM_ClearLog}" Click="ClearLog_Click" Margin="0,0,5,0" Padding="10,5"/>
                        <CheckBox x:Name="ShowDryRunLogsCheckBox" Content="{DynamicResource LOC_APM_ShowDryRunLogs}" 
                                  VerticalAlignment="Center" Margin="20,0,0,0" IsChecked="True"
                                  Checked="LogFilter_Changed" Unchecked="LogFilter_Changed"/>
                    </StackPanel>
                    
                    <DataGrid x:Name="LogDataGrid" Grid.Row="1" 
                              AutoGenerateColumns="False" 
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{DynamicResource LOC_APM_ColumnTimestamp}" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="150"/>
                            <DataGridTextColumn Header="{DynamicResource LOC_APM_ColumnAction}" Binding="{Binding ActionName}" Width="*"/>
                            <DataGridTextColumn Header="{DynamicResource LOC_APM_ColumnResult}" Width="80">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="Success">
                                        <Binding.Converter>
                                            <local:BoolToStatusConverter/>
                                        </Binding.Converter>
                                    </Binding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="{DynamicResource LOC_APM_ColumnExitCode}" Binding="{Binding ExitCode}" Width="100"/>
                            <DataGridTextColumn Header="{DynamicResource LOC_APM_ColumnMessage}" Binding="{Binding Message}" Width="*"/>
                            <DataGridCheckBoxColumn Header="{DynamicResource LOC_APM_ColumnDryRun}" Binding="{Binding IsDryRun}" Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Statistics Tab -->
            <TabItem Header="{DynamicResource LOC_APM_Tab_Statistics}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <Border Background="#FF2D2D30" CornerRadius="5" Padding="15" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource LOC_APM_ActionsExecuted}" Foreground="Gray" FontSize="11"/>
                                <TextBlock x:Name="TotalActionsText" Text="0" FontSize="24" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FF2D2D30" CornerRadius="5" Padding="15" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource LOC_APM_TimeSaved}" Foreground="Gray" FontSize="11"/>
                                <TextBlock x:Name="TimeSavedText" Text="0" FontSize="24" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FF2D2D30" CornerRadius="5" Padding="15" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource LOC_APM_SuccessRate}" Foreground="Gray" FontSize="11"/>
                                <TextBlock x:Name="SuccessRateText" Text="100%" FontSize="24" FontWeight="Bold" Foreground="LimeGreen"/>
                            </StackPanel>
                        </Border>
                        <Button Content="{DynamicResource LOC_APM_Refresh}" Click="RefreshStatistics_Click" VerticalAlignment="Center" Padding="10,5" Margin="10,0,0,0"/>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="{DynamicResource LOC_APM_MostUsedActions}" FontWeight="Bold" Margin="0,0,0,5"/>
                            <DataGrid x:Name="MostUsedActionsGrid" AutoGenerateColumns="False" IsReadOnly="True" Height="150">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="{DynamicResource LOC_APM_ColumnAction}" Binding="{Binding ActionName}" Width="*"/>
                                    <DataGridTextColumn Header="{DynamicResource LOC_APM_ColumnExecutions}" Binding="{Binding ExecutionCount}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="{DynamicResource LOC_APM_FailingActions}" FontWeight="Bold" Margin="0,0,0,5"/>
                            <DataGrid x:Name="FailingActionsGrid" AutoGenerateColumns="False" IsReadOnly="True" Height="150">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="{DynamicResource LOC_APM_ColumnAction}" Binding="{Binding ActionName}" Width="*"/>
                                    <DataGridTextColumn Header="{DynamicResource LOC_APM_ColumnErrors}" Binding="{Binding FailureCount}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            
            <!-- Settings Tab -->
            <TabItem Header="{DynamicResource LOC_APM_Tab_Settings}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="{DynamicResource LOC_APM_Notifications}" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <CheckBox x:Name="ShowNotificationsCheckBox" Content="{DynamicResource LOC_APM_ShowNotifications}" 
                                  Margin="0,0,0,5" Checked="ShowNotificationsCheckBox_Checked" Unchecked="ShowNotificationsCheckBox_Unchecked"/>
                        <TextBlock Text="{DynamicResource LOC_APM_ShowNotificationsDesc}" 
                                   Foreground="#FF808080" FontSize="11" Margin="20,0,0,10"/>
                        
                        <TextBlock Text="{DynamicResource LOC_APM_Execution}" FontWeight="Bold" FontSize="14" Margin="0,20,0,10"/>
                        <CheckBox x:Name="EnableDryRunCheckBox" Content="{DynamicResource LOC_APM_EnableDryRun}" 
                                  Margin="0,0,0,5" Checked="EnableDryRunCheckBox_Checked" Unchecked="EnableDryRunCheckBox_Unchecked"/>
                        <TextBlock Text="{DynamicResource LOC_APM_EnableDryRunDesc}" 
                                   Foreground="#FF808080" FontSize="11" Margin="20,0,0,10"/>
                        
                        <TextBlock Text="{DynamicResource LOC_APM_Backup}" FontWeight="Bold" FontSize="14" Margin="0,20,0,10"/>
                        <CheckBox x:Name="AutoBackupCheckBox" Content="{DynamicResource LOC_APM_AutoBackup}" 
                                  Margin="0,0,0,5" Checked="AutoBackupCheckBox_Checked" Unchecked="AutoBackupCheckBox_Unchecked"/>
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                            <TextBlock Text="{DynamicResource LOC_APM_BackupInterval}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="BackupIntervalTextBox" Width="50" TextChanged="BackupIntervalTextBox_TextChanged"/>
                        </StackPanel>
                        <Button Content="{DynamicResource LOC_APM_BackupNow}" Click="BackupNow_Click" HorizontalAlignment="Left" Padding="10,5" Margin="20,5,0,10"/>
                        <Button Content="{DynamicResource LOC_APM_RestoreBackup}" Click="RestoreBackup_Click" HorizontalAlignment="Left" Padding="10,5" Margin="20,0,0,10"/>

                        <TextBlock Text="{DynamicResource LOC_APM_Log}" FontWeight="Bold" FontSize="14" Margin="0,20,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="{DynamicResource LOC_APM_MaxLogEntries}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="MaxLogEntriesTextBox" Width="100" TextChanged="MaxLogEntriesTextBox_TextChanged"/>
                        </StackPanel>

                        <TextBlock Text="{DynamicResource LOC_APM_Wizard}" FontWeight="Bold" FontSize="14" Margin="0,20,0,10"/>
                        <Button Content="{DynamicResource LOC_APM_RestartWizard}" Click="RestartWizard_Click" HorizontalAlignment="Left" Padding="10,5"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>

<UserControl x:Class="AutomationProfileManager.Views.AutomationProfileManagerSettingsView"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:models="clr-namespace:AutomationProfileManager.Models"
         xmlns:sys="clr-namespace:System;assembly=mscorlib"
         xmlns:local="clr-namespace:AutomationProfileManager.Views"
         mc:Ignorable="d" 
         d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        <local:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
        <local:TagsToStringConverter x:Key="TagsToStringConverter"/>
        
        <!-- Template per categorie nel TreeView -->
    <HierarchicalDataTemplate x:Key="CategoryTemplate" ItemsSource="{Binding Actions}">
        <TextBlock Text="{Binding CategoryName}" FontWeight="SemiBold" Foreground="#FF00BFFF"/>
        <HierarchicalDataTemplate.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal" Margin="2">
                    <TextBlock Text="{Binding Name}" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding TagsDisplay}" Foreground="#FF808080" FontSize="10" 
                               VerticalAlignment="Center" FontStyle="Italic"/>
                </StackPanel>
            </DataTemplate>
        </HierarchicalDataTemplate.ItemTemplate>
    </HierarchicalDataTemplate>
</UserControl.Resources>
<Grid>
    <TabControl>
        <!-- Action Library Tab -->
        <TabItem Header="Libreria Azioni">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                        <Button Content="+ Aggiungi Azione" Click="AddAction_Click" Margin="0,0,5,0" Padding="10,5"/>
                        <Button Content="Modifica" Click="EditAction_Click" Margin="0,0,5,0" Padding="10,5" x:Name="EditActionButton" IsEnabled="False"/>
                        <Button Content="Rimuovi" Click="RemoveAction_Click" Margin="0,0,5,0" Padding="10,5" x:Name="RemoveActionButton" IsEnabled="False"/>
                        <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>
                        <Button Content="Importa Azioni Predefinite" Click="ImportDefaultActions_Click" Margin="0,0,5,0" Padding="10,5"/>
                    </StackPanel>

                    <TextBlock Grid.Row="1" Text="Crea azioni riutilizzabili da assegnare ai profili. Le azioni Mirror ripristinano lo stato precedente alla chiusura del gioco." 
                               TextWrapping="Wrap" Foreground="#FF808080" Margin="0,0,0,10" FontSize="11"/>
                    
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
                            <Label Content="Filtra per categoria:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox x:Name="CategoryFilterComboBox" Width="150" SelectionChanged="CategoryFilter_SelectionChanged" Margin="0,0,10,0">
                                <ComboBoxItem Content="Tutte" IsSelected="True"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <DataGrid x:Name="ActionsDataGrid" Grid.Row="1" 
                                  AutoGenerateColumns="False" 
                                  SelectionMode="Extended"
                                  CanUserAddRows="False"
                                  SelectionChanged="ActionsDataGrid_SelectionChanged"
                                  KeyDown="ActionsDataGrid_KeyDown">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nome" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Categoria" Binding="{Binding Category}" Width="100"/>
                                <DataGridTemplateColumn Header="Tag" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Tags, Converter={StaticResource TagsToStringConverter}}" 
                                                       Foreground="#FF808080" FontSize="10" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Tipo" Binding="{Binding ActionType}" Width="100"/>
                                <DataGridTextColumn Header="Percorso/Comando" Binding="{Binding Path}" Width="*"/>
                                <DataGridCheckBoxColumn Header="Mirror" Binding="{Binding IsMirrorAction}" Width="50"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>
            
            <!-- Profile Management Tab -->
            <TabItem Header="Gestione Profili">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Panel: Profiles List -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                            <Button Content="+ Nuovo Profilo" Click="AddProfile_Click" Margin="0,0,5,0" Padding="10,5"/>
                            <Button Content="Duplica" Click="DuplicateProfile_Click" Margin="0,0,5,0" Padding="10,5" x:Name="DuplicateProfileButton" IsEnabled="False"/>
                            <Button Content="Da Template..." Click="CreateFromTemplate_Click" Margin="0,0,5,0" Padding="10,5"/>
                            <Button Content="Elimina" Click="RemoveProfile_Click" Margin="0,0,5,0" Padding="10,5" x:Name="RemoveProfileButton" IsEnabled="False"/>
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5,0"/>
                            <Button Content="Esporta..." Click="ExportProfiles_Click" Margin="0,0,5,0" Padding="10,5" ToolTip="Esporta profili e azioni in un file JSON"/>
                            <Button Content="Importa..." Click="ImportProfiles_Click" Margin="0,0,5,0" Padding="10,5" ToolTip="Importa profili e azioni da un file JSON"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Text="Profili disponibili:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        
                        <ListBox x:Name="ProfilesListBox" Grid.Row="2" 
                                 SelectionChanged="ProfilesListBox_SelectionChanged"
                                 DisplayMemberPath="Name"/>
                    </Grid>
                    
                    <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="#FF3F3F46"/>
                    
                    <!-- Right Panel: Profile Actions -->
                    <Grid Grid.Column="2" Margin="10,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock x:Name="ProfileNameTextBlock" 
                                       FontSize="16" FontWeight="Bold" 
                                       VerticalAlignment="Center" Text="Seleziona un profilo"/>
                            <Button Content="Esegui Azioni di Prova" Click="DryRunProfile_Click" 
                                    Margin="20,0,0,0" Padding="10,5" 
                                    x:Name="DryRunButton" IsEnabled="False"
                                    ToolTip="Esegue tutte le azioni del profilo in modalitÃ  dry-run (senza esecuzione reale)"/>
                            <Button Content="Trova/Sostituisci Path" Click="FindReplacePath_Click" 
                                    Margin="10,0,0,0" Padding="10,5" 
                                    x:Name="FindReplaceButton" IsEnabled="False"
                                    ToolTip="Trova e sostituisci percorsi nelle azioni del profilo"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Text="Doppio click o trascina le azioni dalla lista a sinistra. Usa i pulsanti per riordinare o rimuovere." 
                                   TextWrapping="Wrap" Foreground="#FF808080" Margin="0,0,0,10" FontSize="11"/>
                        
                        <Grid Grid.Row="2" Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Azioni Disponibili" FontWeight="SemiBold" Grid.Column="0"/>
                            <TextBlock Text="-->" HorizontalAlignment="Center" Grid.Column="1" Foreground="#FF808080"/>
                            <TextBlock Text="Azioni nel Profilo" FontWeight="SemiBold" Grid.Column="2"/>
                        </Grid>
                        
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Available Actions - TreeView con categorie espandibili -->
                            <TreeView x:Name="AvailableActionsTreeView" 
                                      Grid.Column="0"
                                      ItemsSource="{Binding}"
                                      ItemTemplate="{StaticResource CategoryTemplate}"
                                      PreviewMouseLeftButtonDown="AvailableActionsTreeView_PreviewMouseLeftButtonDown"
                                      PreviewMouseMove="AvailableActionsTreeView_PreviewMouseMove"
                                      PreviewMouseLeftButtonUp="AvailableActionsTreeView_PreviewMouseLeftButtonUp"
                                      MouseDoubleClick="AvailableActionsTreeView_MouseDoubleClick">
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="TreeViewItem">
                                        <Setter Property="IsExpanded" Value="False"/>
                                        <Setter Property="Foreground" Value="#FFFFFFFF"/>
                                        <Setter Property="Padding" Value="2"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF3E3E42"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#FF0078D4"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TreeView.ItemContainerStyle>
                            </TreeView>

                            <TextBlock Grid.Column="1" Text=">>>" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                       FontSize="14" Foreground="#FF808080"/>
                            
                            <!-- Profile Actions - NO drag events, use buttons instead -->
                            <ListBox x:Name="ProfileActionsListBox" 
                                     Grid.Column="2"
                                     AllowDrop="True"
                                     Drop="ProfileActionsListBox_Drop"
                                     DragOver="ProfileActionsListBox_DragOver">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Move Up/Down buttons -->
                                            <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,0,5,0">
                                                <Button Content="^" Width="20" Height="16" Padding="0" Margin="0,0,0,1"
                                                        FontSize="10" Click="MoveActionUp_Click" ToolTip="Sposta su"/>
                                                <Button Content="v" Width="20" Height="16" Padding="0"
                                                        FontSize="10" Click="MoveActionDown_Click" ToolTip="Sposta giu"/>
                                            </StackPanel>
                                            
                                            <TextBlock Text="{Binding Name}" Grid.Column="1" VerticalAlignment="Center" 
                                                       TextTrimming="CharacterEllipsis" Margin="0,0,5,0"/>
                                            
                                            <ComboBox Grid.Column="2" 
                                                      SelectedItem="{Binding ExecutionPhase}"
                                                      Width="120" Margin="0,0,5,0"
                                                      SelectionChanged="ExecutionPhase_Changed"
                                                      FontSize="11">
                                                <ComboBox.ItemsSource>
                                                    <x:Array Type="{x:Type models:ExecutionPhase}">
                                                        <x:Static Member="models:ExecutionPhase.BeforeStarting"/>
                                                        <x:Static Member="models:ExecutionPhase.AfterStarting"/>
                                                        <x:Static Member="models:ExecutionPhase.AfterClosing"/>
                                                    </x:Array>
                                                </ComboBox.ItemsSource>
                                            </ComboBox>
                                            
                                            <Button Content="X" Grid.Column="3" 
                                                    Width="24" Height="24"
                                                    Padding="0"
                                                    FontSize="12"
                                                    Click="RemoveActionFromProfile_Click"
                                                    ToolTip="Rimuovi dal profilo"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>
            
            <!-- Log Viewer Tab -->
            <TabItem Header="Log Azioni">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                        <Button Content="Aggiorna" Click="RefreshLog_Click" Margin="0,0,5,0" Padding="10,5"/>
                        <Button Content="Pulisci Log" Click="ClearLog_Click" Margin="0,0,5,0" Padding="10,5"/>
                        <CheckBox x:Name="ShowDryRunLogsCheckBox" Content="Mostra anche dry-run" 
                                  VerticalAlignment="Center" Margin="20,0,0,0" IsChecked="True"
                                  Checked="LogFilter_Changed" Unchecked="LogFilter_Changed"/>
                    </StackPanel>
                    
                    <DataGrid x:Name="LogDataGrid" Grid.Row="1" 
                              AutoGenerateColumns="False" 
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="150"/>
                            <DataGridTextColumn Header="Azione" Binding="{Binding ActionName}" Width="*"/>
                            <DataGridTextColumn Header="Esito" Width="80">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="Success">
                                        <Binding.Converter>
                                            <local:BoolToStatusConverter/>
                                        </Binding.Converter>
                                    </Binding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Codice Ritorno" Binding="{Binding ExitCode}" Width="100"/>
                            <DataGridTextColumn Header="Messaggio" Binding="{Binding Message}" Width="*"/>
                            <DataGridCheckBoxColumn Header="Dry-Run" Binding="{Binding IsDryRun}" Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Statistics Tab -->
            <TabItem Header="Statistiche">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <Border Background="#FF2D2D30" CornerRadius="5" Padding="15" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Azioni Eseguite" Foreground="Gray" FontSize="11"/>
                                <TextBlock x:Name="TotalActionsText" Text="0" FontSize="24" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FF2D2D30" CornerRadius="5" Padding="15" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Tempo Risparmiato" Foreground="Gray" FontSize="11"/>
                                <TextBlock x:Name="TimeSavedText" Text="0 secondi" FontSize="24" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FF2D2D30" CornerRadius="5" Padding="15" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Tasso Successo" Foreground="Gray" FontSize="11"/>
                                <TextBlock x:Name="SuccessRateText" Text="100%" FontSize="24" FontWeight="Bold" Foreground="LimeGreen"/>
                            </StackPanel>
                        </Border>
                        <Button Content="Aggiorna" Click="RefreshStatistics_Click" VerticalAlignment="Center" Padding="10,5" Margin="10,0,0,0"/>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="ðŸ”¥ Azioni piÃ¹ usate" FontWeight="Bold" Margin="0,0,0,5"/>
                            <DataGrid x:Name="MostUsedActionsGrid" AutoGenerateColumns="False" IsReadOnly="True" Height="150">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Azione" Binding="{Binding ActionName}" Width="*"/>
                                    <DataGridTextColumn Header="Esecuzioni" Binding="{Binding ExecutionCount}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="âš ï¸ Azioni con errori" FontWeight="Bold" Margin="0,0,0,5"/>
                            <DataGrid x:Name="FailingActionsGrid" AutoGenerateColumns="False" IsReadOnly="True" Height="150">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Azione" Binding="{Binding ActionName}" Width="*"/>
                                    <DataGridTextColumn Header="Errori" Binding="{Binding FailureCount}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            
            <!-- Settings Tab -->
            <TabItem Header="Impostazioni">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Notifiche" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <CheckBox x:Name="ShowNotificationsCheckBox" Content="Mostra notifiche" 
                                  Margin="0,0,0,5" Checked="ShowNotificationsCheckBox_Checked" Unchecked="ShowNotificationsCheckBox_Unchecked"/>
                        <TextBlock Text="Quando disabilitato, le notifiche dell'estensione non verranno mostrate" 
                                   Foreground="#FF808080" FontSize="11" Margin="20,0,0,10"/>
                        
                        <TextBlock Text="Esecuzione" FontWeight="Bold" FontSize="14" Margin="0,20,0,10"/>
                        <CheckBox x:Name="EnableDryRunCheckBox" Content="Abilita dry-run globale (solo test, nessuna esecuzione)" 
                                  Margin="0,0,0,5" Checked="EnableDryRunCheckBox_Checked" Unchecked="EnableDryRunCheckBox_Unchecked"/>
                        <TextBlock Text="Quando abilitato, tutte le azioni vengono eseguite in modalitÃ  test senza effetti reali" 
                                   Foreground="#FF808080" FontSize="11" Margin="20,0,0,10"/>
                        
                        <TextBlock Text="Backup" FontWeight="Bold" FontSize="14" Margin="0,20,0,10"/>
                        <CheckBox x:Name="AutoBackupCheckBox" Content="Backup automatico configurazione" 
                                  Margin="0,0,0,5" Checked="AutoBackupCheckBox_Checked" Unchecked="AutoBackupCheckBox_Unchecked"/>
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                            <TextBlock Text="Intervallo backup (giorni):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="BackupIntervalTextBox" Width="50" TextChanged="BackupIntervalTextBox_TextChanged"/>
                        </StackPanel>
                        <Button Content="Esegui Backup Ora" Click="BackupNow_Click" HorizontalAlignment="Left" Padding="10,5" Margin="20,5,0,10"/>
                        <Button Content="Ripristina da Backup..." Click="RestoreBackup_Click" HorizontalAlignment="Left" Padding="10,5" Margin="20,0,0,10"/>

                        <TextBlock Text="Log" FontWeight="Bold" FontSize="14" Margin="0,20,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Massimo voci di log:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="MaxLogEntriesTextBox" Width="100" TextChanged="MaxLogEntriesTextBox_TextChanged"/>
                        </StackPanel>

                        <TextBlock Text="Wizard" FontWeight="Bold" FontSize="14" Margin="0,20,0,10"/>
                        <Button Content="Riavvia Wizard Configurazione" Click="RestartWizard_Click" HorizontalAlignment="Left" Padding="10,5"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>

<Window x:Class="AutomationProfileManager.Views.SetupWizardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource LOC_APM_WizardTitle}"
        Height="550" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF1E1E1E">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/DarkTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl x:Name="WizardTabs" Grid.Row="0" Margin="10" Background="#FF2D2D30">
            <TabItem Header="{DynamicResource LOC_APM_WizardWelcome}">
                <StackPanel Margin="20">
                    <TextBlock Text="{DynamicResource LOC_APM_WizardWelcome}" 
                               FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    <TextBlock Text="{DynamicResource LOC_APM_WizardWelcomeDesc}" TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10" Text="{DynamicResource LOC_APM_WizardYouCan}"/>
                    <TextBlock Text="{DynamicResource LOC_APM_WizardYouCanItem_Close}" Margin="20,0,0,5"/>
                    <TextBlock Text="{DynamicResource LOC_APM_WizardYouCanItem_Open}" Margin="20,0,0,5"/>
                    <TextBlock Text="{DynamicResource LOC_APM_WizardYouCanItem_Resolution}" Margin="20,0,0,5"/>
                    <TextBlock Text="{DynamicResource LOC_APM_WizardYouCanItem_Scripts}" Margin="20,0,0,5"/>
                    <TextBlock Text="{DynamicResource LOC_APM_WizardYouCanItem_Restore}" Margin="20,0,0,5"/>
                    <TextBlock TextWrapping="Wrap" Margin="0,20,0,0" Text="{DynamicResource LOC_APM_WizardNextHint}"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="{DynamicResource LOC_APM_WizardSelectApps}">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,10" Text="{DynamicResource LOC_APM_WizardSelectAppsDesc}"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="{DynamicResource LOC_APM_FilterByCategory}" VerticalAlignment="Center"/>
                        <ComboBox x:Name="CategoryFilter" Width="150" SelectionChanged="CategoryFilter_Changed" Margin="5,0,15,0">
                            <ComboBoxItem Content="{DynamicResource LOC_APM_AllCategories}" IsSelected="True"/>
                            <ComboBoxItem Content="Browser"/>
                            <ComboBoxItem Content="Comunicazione"/>
                            <ComboBoxItem Content="Multimedia"/>
                            <ComboBoxItem Content="Gaming"/>
                            <ComboBoxItem Content="Hardware/Overlay"/>
                            <ComboBoxItem Content="Sviluppo"/>
                            <ComboBoxItem Content="Creativita"/>
                            <ComboBoxItem Content="Cloud/Sync"/>
                            <ComboBoxItem Content="{DynamicResource LOC_APM_CategoryManual}"/>
                            <ComboBoxItem Content="Altro"/>
                        </ComboBox>
                        <TextBox x:Name="SearchBox" Width="150" TextChanged="SearchBox_TextChanged"/>
                    </StackPanel>
                    
                    <ListBox x:Name="DetectedAppsListBox" Grid.Row="2" SelectionMode="Extended">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}" Margin="5,5,10,5"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Category}" Foreground="#FF808080" 
                                               FontSize="10" VerticalAlignment="Center" Margin="10,0,10,0"
                                               Background="#FF3E3E42" Padding="5,2"/>
                                    <TextBlock Grid.Column="3" Text="{Binding ProcessName}" Foreground="#FF606060" 
                                               FontSize="10" VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="{DynamicResource LOC_APM_WizardScanApps}" Click="ScanInstalledApps_Click" 
                                Padding="10,5" Margin="0,0,10,0"/>
                        <Button Content="{DynamicResource LOC_APM_WizardAddApp}" Click="BrowseApp_Click" 
                                Padding="10,5" Margin="0,0,10,0"/>
                        <Button Content="{DynamicResource LOC_APM_WizardSelectAll}" Click="SelectAll_Click" 
                                Padding="10,5" Margin="0,0,10,0"/>
                        <Button Content="{DynamicResource LOC_APM_WizardDeselectAll}" Click="DeselectAll_Click" 
                                Padding="10,5"/>
                        <TextBlock x:Name="AppCountText" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="#FF808080"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="{DynamicResource LOC_APM_WizardActionTypes}">
                <StackPanel Margin="20">
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,15" Text="{DynamicResource LOC_APM_WizardActionTypesDesc}"/>
                    
                    <CheckBox x:Name="GenerateCloseActions" Content="{DynamicResource LOC_APM_WizardGenerateClose}" 
                              IsChecked="True" Margin="0,0,0,5"/>
                    
                    <CheckBox x:Name="GenerateOpenActions" Content="{DynamicResource LOC_APM_WizardGenerateOpen}" 
                              IsChecked="True" Margin="0,0,0,5"/>

                    <CheckBox x:Name="AddConditions" Content="{DynamicResource LOC_APM_WizardAddConditions}" 
                              IsChecked="True" Margin="0,0,0,5"/>

                    <CheckBox x:Name="GenerateMirrorActions" Content="{DynamicResource LOC_APM_WizardGenerateMirror}" 
                              IsChecked="True" Margin="0,0,0,5"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="{DynamicResource LOC_APM_WizardProfile}">
                <StackPanel Margin="20">
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10" Text="{DynamicResource LOC_APM_WizardProfileDesc}"/>
                    
                    <RadioButton x:Name="ProfileGaming" Content="{DynamicResource LOC_APM_WizardProfileGaming}" 
                                 IsChecked="True" Margin="0,10,0,5"/>
                    
                    <RadioButton x:Name="ProfileStreaming" Content="{DynamicResource LOC_APM_WizardProfileStreaming}" 
                                 Margin="0,10,0,5"/>
                    
                    <RadioButton x:Name="ProfileEmulator" Content="{DynamicResource LOC_APM_WizardProfileEmulator}" 
                                 Margin="0,10,0,5"/>
                    
                    <RadioButton x:Name="ProfileNone" Content="{DynamicResource LOC_APM_WizardProfileNone}" 
                                 Margin="0,10,0,5"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="{DynamicResource LOC_APM_Tab_Settings}">
                <StackPanel Margin="20">
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,20" Text="{DynamicResource LOC_APM_Tab_Settings}"/>
                    
                    <CheckBox x:Name="EnableNotifications" Content="{DynamicResource LOC_APM_WizardEnableNotifications}" 
                              IsChecked="True" Margin="0,0,0,10"/>
                    
                    <CheckBox x:Name="EnableAutoBackup" Content="{DynamicResource LOC_APM_WizardEnableBackup}" 
                              IsChecked="True" Margin="0,0,0,10"/>
                    
                    <CheckBox x:Name="ImportDefaultActions" Content="{DynamicResource LOC_APM_WizardImportDefault}" 
                              IsChecked="True" Margin="0,0,0,10"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="{DynamicResource LOC_APM_WizardSummary}">
                <StackPanel Margin="20" VerticalAlignment="Center">
                    <TextBlock Text="{DynamicResource LOC_APM_WizardComplete}" 
                               FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock x:Name="SummaryText" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,20"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="PrevButton" Content="{DynamicResource LOC_APM_WizardPrev}" Click="Prev_Click" 
                    Width="100" Height="30" Margin="0,0,10,0" IsEnabled="False"/>
            <Button x:Name="NextButton" Content="{DynamicResource LOC_APM_WizardNext}" Click="Next_Click" 
                    Width="100" Height="30" Margin="0,0,10,0"/>
            <Button Content="{DynamicResource LOC_APM_WizardSkip}" Click="Skip_Click" 
                    Width="80" Height="30"/>
        </StackPanel>
    </Grid>
</Window>

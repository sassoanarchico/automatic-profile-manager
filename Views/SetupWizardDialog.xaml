<Window x:Class="AutomationProfileManager.Views.SetupWizardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configurazione Iniziale - Automation Profile Manager"
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF1E1E1E">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/DarkTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl x:Name="WizardTabs" Grid.Row="0" Margin="10" Background="#FF2D2D30">
            <TabItem Header="1. Benvenuto">
                <StackPanel Margin="20">
                    <TextBlock Text="Benvenuto in Automation Profile Manager!" 
                               FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                        Questa estensione ti permette di automatizzare azioni prima e dopo l'avvio dei giochi.
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                        Puoi:
                    </TextBlock>
                    <TextBlock Text="- Chiudere app in background per liberare risorse" Margin="20,0,0,5"/>
                    <TextBlock Text="- Cambiare risoluzione o profilo energetico" Margin="20,0,0,5"/>
                    <TextBlock Text="- Eseguire script personalizzati" Margin="20,0,0,5"/>
                    <TextBlock Text="- Ripristinare tutto automaticamente alla chiusura" Margin="20,0,0,5"/>
                    <TextBlock TextWrapping="Wrap" Margin="0,20,0,0">
                        Clicca "Avanti" per iniziare la configurazione.
                    </TextBlock>
                </StackPanel>
            </TabItem>

            <TabItem Header="2. App Rilevate">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,10">
                        Abbiamo rilevato queste applicazioni sul tuo sistema. 
                        Seleziona quelle che vuoi poter chiudere automaticamente:
                    </TextBlock>
                    
                    <ListBox x:Name="DetectedAppsListBox" Grid.Row="1" SelectionMode="Multiple">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" Margin="5"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <Button Grid.Row="2" Content="Rileva App" Click="DetectApps_Click" 
                            HorizontalAlignment="Left" Padding="10,5" Margin="0,10,0,0"/>
                </Grid>
            </TabItem>

            <TabItem Header="3. Primo Profilo">
                <StackPanel Margin="20">
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                        Vuoi creare un profilo predefinito? Seleziona un template:
                    </TextBlock>
                    
                    <RadioButton x:Name="ProfileGaming" Content="Profilo Gaming Immersivo" 
                                 IsChecked="True" Margin="0,10,0,5"/>
                    <TextBlock Text="Chiude browser e app di comunicazione, attiva prestazioni elevate" 
                               Foreground="#FF808080" Margin="20,0,0,10" FontSize="11"/>
                    
                    <RadioButton x:Name="ProfileStreaming" Content="Profilo Streaming/Recording" 
                                 Margin="0,10,0,5"/>
                    <TextBlock Text="Avvia OBS, chiude app pesanti, ottimizza per lo streaming" 
                               Foreground="#FF808080" Margin="20,0,0,10" FontSize="11"/>
                    
                    <RadioButton x:Name="ProfileEmulator" Content="Profilo Emulatori" 
                                 Margin="0,10,0,5"/>
                    <TextBlock Text="Cambia risoluzione, chiude app non necessarie" 
                               Foreground="#FF808080" Margin="20,0,0,10" FontSize="11"/>
                    
                    <RadioButton x:Name="ProfileNone" Content="Non creare nessun profilo" 
                                 Margin="0,10,0,5"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="4. Impostazioni">
                <StackPanel Margin="20">
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                        Configura le impostazioni iniziali:
                    </TextBlock>
                    
                    <CheckBox x:Name="EnableNotifications" Content="Mostra notifiche quando i profili vengono eseguiti" 
                              IsChecked="True" Margin="0,0,0,10"/>
                    
                    <CheckBox x:Name="EnableAutoBackup" Content="Backup automatico della configurazione" 
                              IsChecked="True" Margin="0,0,0,10"/>
                    
                    <CheckBox x:Name="ImportDefaultActions" Content="Importa libreria azioni predefinite" 
                              IsChecked="True" Margin="0,0,0,10"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="5. Completato">
                <StackPanel Margin="20" VerticalAlignment="Center">
                    <TextBlock Text="Configurazione completata!" 
                               FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,20">
                        L'estensione e pronta per l'uso. Puoi:
                    </TextBlock>
                    <TextBlock Text="- Creare nuovi profili dalla tab Gestione Profili" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="- Aggiungere azioni dalla tab Libreria Azioni" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="- Assegnare profili ai giochi dal menu contestuale" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" Margin="0,20,0,0" Foreground="#FF808080">
                        Clicca "Completa" per iniziare ad usare l'estensione.
                    </TextBlock>
                </StackPanel>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="PrevButton" Content="Indietro" Click="Prev_Click" 
                    Width="100" Height="30" Margin="0,0,10,0" IsEnabled="False"/>
            <Button x:Name="NextButton" Content="Avanti" Click="Next_Click" 
                    Width="100" Height="30" Margin="0,0,10,0"/>
            <Button Content="Salta" Click="Skip_Click" 
                    Width="80" Height="30"/>
        </StackPanel>
    </Grid>
</Window>

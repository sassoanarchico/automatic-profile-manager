<UserControl x:Class="AutomationProfileManager.Views.ProfileManagerSidebarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Foreground="{DynamicResource TextBrush}">
    <UserControl.Resources>
        <Style x:Key="IconBtn" TargetType="Button">
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="1,0"/>
            <Setter Property="MinWidth" Value="28"/>
            <Setter Property="MinHeight" Value="24"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="ToolbarBtn" TargetType="Button">
            <Setter Property="Padding" Value="12,7"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="ProfileCard" TargetType="Border">
            <Setter Property="Background" Value="#0AFFFFFF"/>
            <Setter Property="BorderBrush" Value="#18808080"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style x:Key="ActionChip" TargetType="Border">
            <Setter Property="Background" Value="#12607080"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,2,6,2"/>
        </Style>
        <Style x:Key="GameChip" TargetType="Border">
            <Setter Property="Background" Value="#15808080"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,2,6,2"/>
        </Style>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Opacity" Value="0.55"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Padding="16,14,16,10"
                Background="#0A808080"
                BorderBrush="#18808080" BorderThickness="0,0,0,1">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets"
                               FontSize="22" VerticalAlignment="Center"
                               Margin="0,0,10,0" Opacity="0.75"/>
                    <TextBlock Text="{DynamicResource LOC_APM_Sidebar_Title}" 
                               FontSize="20" FontWeight="Bold"/>
                </StackPanel>
                <TextBlock Text="{DynamicResource LOC_APM_Sidebar_Subtitle}" 
                           FontSize="11.5" Opacity="0.5" Margin="32,3,0,0"/>
            </StackPanel>
        </Border>

        <!-- TOOLBAR -->
        <Border Grid.Row="1" Padding="12,8"
                Background="#06808080"
                BorderBrush="#18808080" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <!-- Create New Profile -->
                <Button Style="{StaticResource ToolbarBtn}" Click="CreateProfileButton_Click"
                        ToolTip="{DynamicResource LOC_APM_Sidebar_CreateProfile}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                   VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="{DynamicResource LOC_APM_Sidebar_CreateProfile}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!-- Assign Profile to Game -->
                <Button Style="{StaticResource ToolbarBtn}" Click="AssignProfileButton_Click"
                        ToolTip="{DynamicResource LOC_APM_Sidebar_AssignProfile}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE71B;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                   VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="{DynamicResource LOC_APM_Sidebar_AssignProfile}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!-- Refresh -->
                <Button Style="{StaticResource ToolbarBtn}" Click="RefreshButton_Click"
                        ToolTip="{DynamicResource LOC_APM_Sidebar_Refresh}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                   VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="{DynamicResource LOC_APM_Sidebar_Refresh}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- PROFILES LIST -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="12,8">
            <StackPanel>
                <!-- Empty State -->
                <StackPanel x:Name="EmptyStatePanel" Visibility="Collapsed"
                            HorizontalAlignment="Center" Margin="0,60,0,0">
                    <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets"
                               FontSize="40" HorizontalAlignment="Center" Opacity="0.2" Margin="0,0,0,12"/>
                    <TextBlock Text="{DynamicResource LOC_APM_Sidebar_NoProfiles}"
                               HorizontalAlignment="Center" Opacity="0.4" FontSize="14"/>
                    <TextBlock Text="{DynamicResource LOC_APM_Sidebar_CreateFirstProfile}"
                               HorizontalAlignment="Center" Opacity="0.3" FontSize="12" Margin="0,4,0,12"/>
                    <Button Click="CreateProfileButton_Click" HorizontalAlignment="Center"
                            Padding="16,8" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                       VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="{DynamicResource LOC_APM_Sidebar_CreateProfile}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Profiles -->
                <ItemsControl x:Name="ProfilesItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ProfileCard}">
                                <StackPanel>
                                    <!-- Profile Header -->
                                    <DockPanel Margin="0,0,0,4">
                                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                            <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets"
                                                       FontSize="16" VerticalAlignment="Center"
                                                       Margin="0,0,8,0" Opacity="0.6"/>
                                            <TextBlock Text="{Binding ProfileName}" FontSize="15" FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                                            <!-- Rename -->
                                            <Button Style="{StaticResource IconBtn}" Click="RenameProfile_Click"
                                                    Tag="{Binding ProfileId}"
                                                    ToolTip="{DynamicResource LOC_APM_Sidebar_RenameProfile}">
                                                <TextBlock Text="&#xE8AC;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                            </Button>
                                            <!-- Add Action -->
                                            <Button Style="{StaticResource IconBtn}" Click="AddActionToProfile_Click"
                                                    Tag="{Binding ProfileId}"
                                                    ToolTip="{DynamicResource LOC_APM_Sidebar_AddAction}">
                                                <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                            </Button>
                                            <!-- Assign Game -->
                                            <Button Style="{StaticResource IconBtn}" Click="AssignToProfile_Click"
                                                    Tag="{Binding ProfileId}"
                                                    ToolTip="{DynamicResource LOC_APM_Sidebar_AssignGameToProfile}">
                                                <TextBlock Text="&#xE71B;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                            </Button>
                                            <!-- Delete Profile -->
                                            <Button Style="{StaticResource IconBtn}" Click="DeleteProfile_Click"
                                                    Tag="{Binding ProfileId}"
                                                    ToolTip="{DynamicResource LOC_APM_Sidebar_DeleteProfile}">
                                                <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                                                           Foreground="#FF6B68"/>
                                            </Button>
                                        </StackPanel>
                                    </DockPanel>

                                    <!-- ACTIONS SECTION -->
                                    <TextBlock Style="{StaticResource SectionHeader}" Margin="24,4,0,4">
                                        <Run Text="{DynamicResource LOC_APM_Sidebar_Actions}"/>
                                        <Run Text=" ("/>
                                        <Run Text="{Binding ActionCount, Mode=OneWay}"/>
                                        <Run Text=")"/>
                                    </TextBlock>
                                    <ItemsControl ItemsSource="{Binding Actions}" Margin="24,0,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource ActionChip}">
                                                    <DockPanel>
                                                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                                            <TextBlock Text="{Binding PhaseIcon}" FontFamily="Segoe MDL2 Assets"
                                                                       FontSize="11" VerticalAlignment="Center"
                                                                       Margin="0,0,5,0" Opacity="0.6"/>
                                                            <TextBlock Text="{Binding ActionName}" FontSize="12"
                                                                       VerticalAlignment="Center"/>
                                                            <TextBlock Text="{Binding PhaseLabel}" FontSize="10"
                                                                       Opacity="0.4" VerticalAlignment="Center"
                                                                       Margin="6,0,0,0"/>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                                                            <Button Style="{StaticResource IconBtn}" Click="EditAction_Click"
                                                                    Tag="{Binding}" Padding="2"
                                                                    ToolTip="{DynamicResource LOC_APM_Sidebar_EditAction}">
                                                                <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="10"/>
                                                            </Button>
                                                            <Button Style="{StaticResource IconBtn}" Click="RemoveAction_Click"
                                                                    Tag="{Binding}" Padding="2"
                                                                    ToolTip="{DynamicResource LOC_APM_Sidebar_RemoveAction}">
                                                                <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" 
                                                                           FontSize="10" Foreground="#FF6B68"/>
                                                            </Button>
                                                        </StackPanel>
                                                    </DockPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <TextBlock Text="{DynamicResource LOC_APM_Sidebar_NoActions}"
                                               FontSize="11" Opacity="0.3" Margin="24,2,0,0"
                                               Visibility="{Binding NoActionsVisibility}"/>

                                    <!-- ASSIGNED GAMES SECTION -->
                                    <TextBlock Style="{StaticResource SectionHeader}" Margin="24,6,0,4">
                                        <Run Text="{DynamicResource LOC_APM_Sidebar_AssignedGames}"/>
                                        <Run Text=" ("/>
                                        <Run Text="{Binding GameCount, Mode=OneWay}"/>
                                        <Run Text=")"/>
                                    </TextBlock>
                                    <ItemsControl ItemsSource="{Binding AssignedGames}" Margin="24,0,0,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource GameChip}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="&#xE7FC;" FontFamily="Segoe MDL2 Assets"
                                                                   FontSize="11" VerticalAlignment="Center"
                                                                   Margin="0,0,5,0" Opacity="0.5"/>
                                                        <TextBlock Text="{Binding GameName}" FontSize="12"
                                                                   VerticalAlignment="Center"/>
                                                        <Button Style="{StaticResource IconBtn}" 
                                                                Click="RemoveGameFromProfile_Click"
                                                                Tag="{Binding GameId}"
                                                                ToolTip="{DynamicResource LOC_APM_Sidebar_RemoveAssignment}"
                                                                Margin="6,0,0,0" Padding="2">
                                                            <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" 
                                                                       FontSize="10" Foreground="#FF6B68"/>
                                                        </Button>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <TextBlock Text="{DynamicResource LOC_APM_Sidebar_NoGamesAssigned}"
                                               FontSize="11" Opacity="0.3" Margin="24,2,0,0"
                                               Visibility="{Binding NoGamesVisibility}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- STATUS BAR -->
        <Border Grid.Row="3" Padding="16,8"
                Background="#0A808080"
                BorderBrush="#18808080" BorderThickness="0,1,0,0">
            <DockPanel>
                <TextBlock x:Name="ProfileCountText" DockPanel.Dock="Left" FontSize="11.5" Opacity="0.5"/>
                <TextBlock x:Name="GameCountText" DockPanel.Dock="Right" HorizontalAlignment="Right" 
                           FontSize="11.5" Opacity="0.5"/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
